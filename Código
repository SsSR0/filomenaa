####---------Creación de la Ventana--------####
root=Tk()
root.title("TEMPORAL FILOMENA")
root.geometry("342x300")
root.config(bg="SlateGray2")

####---------Creación Botones--------####

fecha=ttk.Combobox(root, state="readonly")
opcionesFecha=["8 Enero 2021", "9 Enero 2021", "10 Enero 2021", "11 Enero 2021", "12 Enero 2021", "13 Enero 2021", "14 Enero 2021"]
fecha["values"]=opcionesFecha
fecha.place(x=130, y=40, width=100)
Huelva=Button(root, bg="gray98", text="Huelva", command=Huelva)
Huelva.place(x=10, y=70, width=80)
Sevilla=Button(root, bg="gray98", text="Sevilla", command=Sevilla)
Sevilla.place(x=90, y=70, width=80)
Cordoba=Button(root, bg="gray98", text="Córdoba", command=Cordoba)
Cordoba.place(x=170, y=70, width=80)
Cadiz=Button(root, bg="gray98", text="Cádiz", command=Cadiz)
Cadiz.place(x=250, y=70, width=80)
Malaga=Button(root, bg="gray98", text="Málaga", command=Malaga)
Malaga.place(x=10, y=100, width=80)
Granada=Button(root, bg="gray98", text="Granada", command=Granada)
Granada.place(x=90, y=100, width=80)
Jaen=Button(root, bg="gray98", text="Jaén", command=Jaen)
Jaen.place(x=170, y=100, width=80)
Almeria=Button(root, bg="gray98", text="Almería", command=Almeria)
Almeria.place(x=250, y=100, width=80)






root.mainloop()
