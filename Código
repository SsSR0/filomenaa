from tkinter import *
from tkinter import ttk

####---------Creación Funciones--------####
def Huelva():
    if (combo_sel1:=fecha.get())=="8 Enero 2021":
        temperatura= Label(root, text="Temperatura min: 7ºC    Temperatura max: 15ºC", bg="black", fg="green")
        temperatura.place(x=25, y=150, width=300)
    elif (combo_sel1:=fecha.get())=="9 Enero 2021":
        temperatura= Label(root, text="Temperatura min: 6ºC    Temperatura max: 15ºC", bg="black", fg="green")
        temperatura.place(x=25, y=150, width=300)
    elif (combo_sel1:=fecha.get())=="10 Enero 2021":
        temperatura= Label(root, text="Temperatura min: 6ºC    Temperatura max: 14ºC", bg="black", fg="green")
        temperatura.place(x=25, y=150, width=300)
    elif (combo_sel1:=fecha.get())=="11 Enero 2021":
        temperatura= Label(root, text="Temperatura min: 7ºC    Temperatura max: 15ºC", bg="black", fg="green")
        temperatura.place(x=25, y=150, width=300)
    elif (combo_sel1:=fecha.get())=="12 Enero 2021":
        temperatura= Label(root, text="Temperatura min: 7ºC    Temperatura max: 15ºC", bg="black", fg="green")
        temperatura.place(x=25, y=150, width=300)
    elif (combo_sel1:=fecha.get())=="13 Enero 2021":
        temperatura= Label(root, text="Temperatura min: 6ºC    Temperatura max: 15ºC", bg="black", fg="green")
        temperatura.place(x=25, y=150, width=300)
    elif (combo_sel1:=fecha.get())=="14 Enero 2021":
        temperatura= Label(root, text="Temperatura min: 7ºC    Temperatura max: 14ºC", bg="black", fg="green")
        temperatura.place(x=25, y=150, width=300)
    else:
        temperatura= Label(root, bg="SlateGray2")
        temperatura.place(x=25, y=150, width=300)
